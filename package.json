{
  "name": "@uniquedj95/vform",
  "version": "2.0.4",
  "description": "A simplified ionic vue form builder",
  "type": "module",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "style": "./dist/vform.css",
  "sideEffects": [
    "*.css",
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    },
    "./vform.css": "./dist/vform.css"
  },
  "scripts": {
    "build": "vite build",
    "prepublishOnly": "npm run build",
    "postpublish": "git push && git push --tags",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-pattern 'dist/**' --ignore-pattern 'node_modules/**' --fix",
    "format": "prettier --write src/",
    "version:patch": "node ./scripts/version-bump.js patch",
    "version:minor": "node ./scripts/version-bump.js minor",
    "version:major": "node ./scripts/version-bump.js major",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "keywords": [
    "Vue",
    "ionic",
    "typescript",
    "Form builder"
  ],
  "author": "Daniel Justin <danieljmuleke@gamil.com>",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@ionic/vue": "^8.2.5",
    "@testing-library/vue": "^8.1.0",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vue/test-utils": "^2.4.6",
    "c8": "^10.1.3",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-vue": "^10.2.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "ionicons": "^8.0.9",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.33.1",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.2",
    "vue": "^3.5.10",
    "vue-eslint-parser": "^10.1.3"
  },
  "peerDependencies": {
    "vue": "^3.5.10"
  },
  "dependencies": {
    "@vuepic/vue-datepicker": "11.0.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,less}": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
